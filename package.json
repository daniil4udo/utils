{
    "name": "@democrance/utils",
    "type": "module",
    "version": "0.19.1",
    "packageManager": "pnpm@8.7.0",
    "description": "Set of popular utils",
    "author": "Daniil Chumachenko <daniil4udo@gmail.com>",
    "license": "MIT",
    "repository": "daniil4udo/utils",
    "keywords": [
        "console",
        "utils",
        "log"
    ],
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "import": "./dist/*.js",
            "require": "./dist/*.cjs"
        },
        "./preset": {
            "types": "./dist/preset/autoImportUtilsPreset.d.ts",
            "import": "./dist/preset/autoImportUtilsPreset.js",
            "require": "./dist/preset/autoImportUtilsPreset.cjs"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "prepare": "npx simple-git-hooks",
        "build": "./scripts/build.sh",
        "prepublishOnly": "pnpm build",
        "release": "bumpp --commit 'release: ðŸ”– v' --tag --no-push && pnpm publish --access public",
        "dev": "concurrently --prefix-colors yellow,blue \"pnpm:test\" \"pnpm:typecheck\"",
        "lint": "pnpm lint:eslint . ",
        "lint:eslint": "eslint --color --fix --ignore-path .gitignore",
        "lint:prettier": "prettier --write --log-level warn",
        "test": "vitest --ui --coverage",
        "typedoc": "typedoc --plugin typedoc-plugin-markdown ./lib/index.ts"
    },
    "dependencies": {
        "defu": "^6.1.2",
        "fast-equals": "^5.0.1",
        "file-saver-es": "^2.0.5",
        "micro-memoize": "^4.1.2",
        "perfect-debounce": "^1.0.0",
        "proper-url-join": "^2.1.1",
        "rfdc": "^1.3.0",
        "text-clipper": "^2.2.0",
        "to-fast-properties": "^4.0.0",
        "zipcelx": "^1.6.2"
    },
    "devDependencies": {
        "@democrance/eslint-config": "^0.11.0",
        "@types/file-saver-es": "^2.0.1",
        "@types/node": "^18.17.14",
        "@types/proper-url-join": "^2.1.1",
        "@types/url-template": "^2.0.29",
        "@types/zipcelx": "^1.5.0",
        "@vitest/coverage-v8": "^0.34.3",
        "@vitest/ui": "^0.34.3",
        "@vue/tsconfig": "^0.4.0",
        "bumpp": "^9.2.0",
        "concurrently": "^8.2.1",
        "eslint": "^8.48.0",
        "fast-glob": "^3.3.1",
        "jsdom": "^22.1.0",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "simple-git-hooks": "^2.9.0",
        "tsup": "^7.2.0",
        "typedoc": "^0.25.1",
        "typedoc-plugin-markdown": "^3.16.0",
        "typescript": "^5.2.2",
        "url-template": "^3.1.0",
        "vitest": "^0.34.3"
    },
    "pnpm": {
        "overrides": {
            "file-saver": "npm:file-saver-es@^2.0.5",
            "vite": "^5.0.0-beta.2"
        }
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*.js,*.ts": "pnpm lint:eslint",
        "*.json,.!(eslint)*.json,.code-snippets,.!(browserslist)*rc}": "pnpm lint:prettier"
    }
}
