{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "lib/*.ts",
        "types/*.ts",
        "tests/*.spec.js",
        "tests/*.spec.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "importHelpers": true,
        "isolatedModules": true,
        "moduleResolution": "Node",
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "pretty": true,
        "strictBindCallApply": true,
        "lib": [
            "ESNext",
            "ESNext.WeakRef",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "node",
            "vite/client"
        ]
    },
}
