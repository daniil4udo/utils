{
	"extends": "@vue/tsconfig/tsconfig.node.json",
    "include": [
        "env.d.ts",
        "./lib/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "pretty": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "unbuild",
        ]
    },
}