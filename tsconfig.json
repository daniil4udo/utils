{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "./lib/*.ts",
        "tests/*.spec.js",
        "tests/*.spec.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ],
    "compilerOptions": {
        "moduleResolution": "Node",
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "strict": false,
        "declaration": true,
        "pretty": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
}
