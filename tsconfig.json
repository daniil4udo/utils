{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "lib": [
            "ESNext",
            "ESNext.WeakRef",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "moduleResolution": "Node",
        "types": [
            "node",
            "fast-glob",
            "vite/client",

            "@fastify/deepmerge",
            "defu",
            "fast-equals",
            "file-saver",
            "micro-memoize",
            "perfect-debounce",
            "proper-url-join",
            "rfdc",
            "text-clipper",
            "zipcelx"
        ],
        "strictBindCallApply": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "declaration": true,
        "importHelpers": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "pretty": true
    },
    "include": [
        "env.d.ts",
        "lib/*.ts",
        "types/*.ts",
        "tests/*.spec.{js,ts}"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ]
}
